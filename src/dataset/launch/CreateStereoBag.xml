<launch>
  <arg name="outputFolder" default="/home/ryan/DataSets/raw/auto/1/output"/>
  <arg name="bumblebee_name" default="bumblebee"/>
  <arg name="rawImageInput" default="/home/ryan/DataSets/raw/auto/1/output/rawImageBag_full.bag"/>
  <node name="stereoImageBag" pkg="rosbag" type="record" args="/tf -e /$(arg bumblebee_name)/(left|right)/(.*) --output-name=$(arg outputFolder)/stereoImageBag_full "/>
  <node name="playBackBag" pkg="rosbag" type="play" args="--clock -r 0.5 $(arg rawImageInput)" output="screen" />
</launch>
