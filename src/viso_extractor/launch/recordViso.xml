<launch>
  <arg name="TrackNumber" default="1"/>
  <arg name="LoopNumber" default="1"/>
  <arg name="StereoBag" default="/media/ryan/DATA/Bags/stereoBag_$(arg TrackNumber)_$(arg LoopNumber).bag"/>
  <arg name="outputFolder" default="/media/ryan/DATA/Bags"/>
  <node name="VisoBag" pkg="rosbag" type="record" args="--all --output-name=$(arg outputFolder)/visoBag_$(arg TrackNumber)_$(arg LoopNumber)"/>
  <node name="playBackBag" pkg="rosbag" type="play" args="-r 0.8 --clock $(arg StereoBag)" output="screen" />
</launch> 
